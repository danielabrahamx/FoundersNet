# ===================================
# FOUNDERSNET - ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env and fill in your values
# Updated for AlgoKit Fullstack Template compatibility
# ===================================

# ---------------------------------
# Algorand Network Configuration
# ---------------------------------
# Options: localnet | testnet | mainnet
VITE_ALGOD_NETWORK=localnet

# LocalNet Configuration (default)
VITE_ALGOD_SERVER=http://localhost
VITE_ALGOD_PORT=4001
VITE_ALGOD_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Indexer Configuration (LocalNet)
VITE_INDEXER_SERVER=http://localhost
VITE_INDEXER_PORT=8980
VITE_INDEXER_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# KMD Configuration (LocalNet only - for wallet management)
VITE_KMD_SERVER=http://localhost
VITE_KMD_PORT=4002
VITE_KMD_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# ---------------------------------
# For TestNet, use these instead:
# ---------------------------------
# VITE_ALGOD_NETWORK=testnet
# VITE_ALGOD_SERVER=https://testnet-api.algonode.cloud
# VITE_ALGOD_PORT=443
# VITE_ALGOD_TOKEN=
# VITE_INDEXER_SERVER=https://testnet-idx.algonode.cloud
# VITE_INDEXER_PORT=443
# VITE_INDEXER_TOKEN=

# ---------------------------------
# For MainNet, use these instead:
# ---------------------------------
# VITE_ALGOD_NETWORK=mainnet
# VITE_ALGOD_SERVER=https://mainnet-api.algonode.cloud
# VITE_ALGOD_PORT=443
# VITE_ALGOD_TOKEN=
# VITE_INDEXER_SERVER=https://mainnet-idx.algonode.cloud
# VITE_INDEXER_PORT=443
# VITE_INDEXER_TOKEN=

# ---------------------------------
# Application Configuration
# ---------------------------------
# Application ID (get this after deploying smart contract)
VITE_ALGORAND_APP_ID=1

# Admin Wallet Address (58-character base32 string)
VITE_ALGORAND_ADMIN_ADDRESS=

# Backend API URL
VITE_API_URL=http://localhost:5000

# ---------------------------------
# Backend/Server Configuration
# ---------------------------------
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/foundersnet

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

NODE_ENV=development

# ---------------------------------
# Deployment Configuration (Optional)
# ---------------------------------
# Only needed for smart contract deployments
# Keep these SECRET! Use TestNet accounts for testing
# ALGORAND_MNEMONIC=your 25 word mnemonic phrase here
# ALGORAND_DEPLOYER_MNEMONIC=your 25 word mnemonic phrase here

# ---------------------------------
# Optional: WalletConnect Project ID
# ---------------------------------
# For WalletConnect v2 support (if needed)
# VITE_WALLETCONNECT_PROJECT_ID=
VITE_API_URL=http://localhost:5000
