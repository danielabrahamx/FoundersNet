# ===================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===================================
# Copy this file to .env and fill in your values
# ===================================

# ---------------------------------
# REQUIRED: Algorand Network
# ---------------------------------
# Options: localnet | testnet | mainnet
VITE_ALGORAND_NETWORK=localnet

# ---------------------------------
# REQUIRED: Application ID
# ---------------------------------
# Get this after deploying your smart contract
# LocalNet: Usually starts at 1
# TestNet/MainNet: From deployment output
VITE_ALGORAND_APP_ID=1

# ---------------------------------
# REQUIRED: Admin Wallet Address
# ---------------------------------
# The Algorand address that can perform admin actions
# Format: 58-character base32 string
VITE_ALGORAND_ADMIN_ADDRESS=

# ---------------------------------
# OPTIONAL: Deployment Mnemonics
# ---------------------------------
# Only needed for deployments (not runtime)
# Keep these SECRET and use TestNet accounts only!
# ALGORAND_MNEMONIC=
# ALGORAND_DEPLOYER_MNEMONIC=

# ---------------------------------
# OPTIONAL: Database
# ---------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/db_name

# ---------------------------------
# OPTIONAL: WalletConnect
# ---------------------------------
# For WalletConnect integration (not implemented yet)
# VITE_WALLETCONNECT_PROJECT_ID=

# ---------------------------------
# Application Settings
# ---------------------------------
NODE_ENV=development
VITE_API_URL=http://localhost:5000
